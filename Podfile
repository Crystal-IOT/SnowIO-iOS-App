# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Snow IO' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Snow IO
  
  # Menu pods
  pod 'KYDrawerController', '~> 2.0.4'
  
  # Design components pods
  pod 'Toaster'
  pod 'Pulsator'
  pod 'KDLoadingView', '~> 1.0'
  
  # BottomSearch Component
  pod 'JKBottomSearchView'
  
  # iBeacons pods
  pod 'EstimoteSDK'
  
  # Networking pods
  pod 'Alamofire', '~> 4.7'
  pod 'AlamofireImage', '~> 3.3'
  
  # ObjetMapper pods
  pod 'ObjectMapper', '~> 3.1.0'
  
  # Firebase pods
  pod 'Firebase/Auth'
  pod 'Firebase/Core'
  pod 'Firebase/Database'

  target 'Snow IOTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Snow IOUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
